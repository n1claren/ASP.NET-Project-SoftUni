@model IEnumerable<VehicleServiceFullModel>

@{
    ViewData["Title"] = "Vehicle Administration";
}

<h1>All Available Cars</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Category</th>
            <th scope="col">Engine Type</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            @if (vehicle.CurrentUser == null)
            {
                <tr>
                    <td scope="col">@vehicle.Id</td>
                    <td scope="col">@vehicle.Make</td>
                    <td scope="col">@vehicle.Model</td>
                    <td scope="col">@vehicle.Year</td>
                    <td scope="col">@vehicle.CategoryName</td>
                    <td scope="col">@vehicle.EngineTypeName</td>
                    <td scope="col">
                        <a asp-area="" asp-controller="Vehicles" asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-danger float-right ml-3">Delete</a>
                        <a asp-area="" asp-controller="Vehicles" asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-warning float-right ml-3">Edit</a>
                        <a asp-area="" asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary float-right ml-3">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h1>All Rented Cars</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Category</th>
            <th scope="col">Engine Type</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            @if (vehicle.CurrentUser != null)
            {
                <tr>
                    <td scope="col">@vehicle.Id</td>
                    <td scope="col">@vehicle.Make</td>
                    <td scope="col">@vehicle.Model</td>
                    <td scope="col">@vehicle.Year</td>
                    <td scope="col">@vehicle.CategoryName</td>
                    <td scope="col">@vehicle.EngineTypeName</td>
                    <td scope="col">
                        <a asp-area="" asp-controller="Vehicles" asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-danger float-right ml-3">Delete</a>
                        <a asp-area="" asp-controller="Vehicles" asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-warning float-right ml-3">Edit</a>
                        <a asp-area="" asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary float-right ml-3">Details</a>
                        <a asp-area="" asp-controller="Vehicles" asp-action="Free" asp-route-id="@vehicle.Id" class="btn btn-success float-right ml-3">Free</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>