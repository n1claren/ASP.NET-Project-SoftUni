@model CreateVehicleModel

@{
    ViewData["Title"] = "Enter vehicle details";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 col-sm-12">
            <h2 class="heading-margin text-center">Add A Vehicle</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Make"></label>
                    <input asp-for="Make" class="form-control" placeholder="Your vehicle manufacturer...">
                    <span asp-validation-for="Make" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="Your vehicle model...">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" placeholder="Your vehicle year...">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PricePerDay"></label>
                    <input asp-for="PricePerDay" class="form-control" placeholder="Your vehicle rates...">
                    <span asp-validation-for="PricePerDay" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL"></label>
                    <input asp-for="ImageURL" class="form-control" placeholder="Your vehicle picture link...">
                    <span asp-validation-for="ImageURL" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Describe your vehicle..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="EngineTypeId"></label>
                    <select asp-for="EngineTypeId" class="form-control">
                        @foreach (var engineType in Model.EngineTypes)
                        {
                            <option value="@engineType.Id">@engineType.Type</option>
                        }
                    </select>
                </div>

                <input class="btn btn-primary float-right" type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>