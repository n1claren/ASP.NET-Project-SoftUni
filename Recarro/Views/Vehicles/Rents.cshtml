@model IEnumerable<UserRentedVehiclesModel>

@{
    ViewData["Title"] = "Your rents";
}

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Rented From</th>
            <th scope="col">Rented Until</th>
            <th scope="col">Bill</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
                <tr>
                    <td scope="col">@vehicle.Id</td>
                    <td scope="col">@vehicle.Make</td>
                    <td scope="col">@vehicle.Model</td>
                    <td scope="col">@vehicle.Year</td>
                    <td scope="col">@vehicle.RentedFrom.ToString("dd/MMM/yyyy")</td>
                    <td scope="col">@vehicle.RentedUntil.ToString("dd/MMM/yyyy")</td>
                    <td scope="col">@vehicle.Bill.ToString("F2")$</td>
                    <td scope="col">
                        <a asp-area="" asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary float-right ml-3">Details</a>
                    @if (vehicle.CurrentUser == ViewBag.userId)
                    {
                        <a asp-area="" asp-controller="Vehicles" asp-action="Free" asp-route-id="@vehicle.Id" class="btn btn-success float-right ml-3">Free</a>
                    }
                </td>
                </tr>
        }
    </tbody>
</table>