@model BecomeRenterFormModel

@{
    ViewData["Title"] = "Become a Renter";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 col-sm-12">
            <h2 class="heading-margin text-center">Become a Renter</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Your renter name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Your renter phone...">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Apply" />
            </form>
        </div>
    </div>
</div>